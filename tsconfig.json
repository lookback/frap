{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable",
      "dom"
    ],
    "target": "ES2017",
    "esModuleInterop": true,
    "module": "commonjs",
    "inlineSourceMap": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "build",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noStrictGenericChecks": true
  },
  "include": ["./src/**/*", "./example/**/*"]
}
